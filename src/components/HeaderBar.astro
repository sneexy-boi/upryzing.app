---
import { Icon } from "astro-icon/components";
interface Props {
	variant: "default" | "centred";
}

const { variant } = Astro.props;
---

<header class=`headerbar ${variant}`>
	<a href="/">
		<Icon id="logo" size={24} fill="currentColor" name="logo/mc" />
		<Icon
			fill="hsl(var(--accent-hue), 100%, 95%);"
			size={96}
			name="wordmark"
		/>
	</a>
	{
		variant !== "centred" && (
			<div class="actions-container">
				<a class="github" href="#">
					<Icon
						fill="hsl(var(--accent-hue), 100%, 95%);"
						size={24}
						name="ph:fediverse-logo"
					/>
				</a>
				<a class="fedi" href="#">
					<Icon
						fill="hsl(var(--accent-hue), 100%, 95%);"
						size={24}
						name="ph:github-logo"
					/>
				</a>
			</div>
		)
	}
</header>

<style>
	.headerbar {
		position: absolute;
		top: 0;
		left: 0;
		padding: 10px;

		width: 100%;
		height: 4rem;

		display: flex;
		flex-flow: row nowrap;
		z-index: 10;

		user-select: none;
		-webkit-user-select: none;
	}
	
	.headerbar a {
		display: block;
	}

	.headerbar a svg,
	.headerbar .actions-container a svg {
		color: hsl(var(--accent-hue), 100%, 95%);
	}

	.headerbar a svg#logo {
		color: hsl(var(--accent-hue), 100%, 82%);
	}

	.headerbar a,
	.headerbar .actions-container {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.headerbar.centred {
		justify-content: center;
	}

	.headerbar .actions-container {
		margin-left: auto;
	}
</style>
