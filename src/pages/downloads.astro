	<style>
		.header {
			margin-top: 3rem;
		}

		.header h2 {
			margin-left: 1rem;
			font-size: 3em;
			margin-bottom: 0;
		}

		:is(.official, .unofficial) h3 {
			margin-left: 1rem;
			font-size: 2.5em;
		}

		.unofficial p {
			font-size: 1.2em;
			margin-left: 1rem;
		}
	</style>
</DefaultLayout>
